<h1>New User</h1>
<form action="/new_user" method="post">
	<label for="first_name">First Name:</label><br />
	<input id="first_name" name="user[first_name]" type="text" />
	<br />

	<label for="last_name">Last Name:</label><br />
	<input id="last_name" name="user[last_name]" type="text" />
	<br />

	<label for="email">Email:</label><br />
	<input id="email" name="user[email]" type="text" />
	<br />

	<label for="password">Password:</label><br />
	<input id="password" name="user[password]" type="text" />
	<br />

	<label for="bitly_user">Bitly User:</label><br />
	<input id="bitly_user" name="user[bitly_user]" type="text" />
	<br />

	<label for="bitly_key">Bitly Key:</label><br />
	<input id="bitly_key" name="user[bitly_key]" type="text" />
	<br />
	
	<button type="submit">Save</button>
</form>


<form data-bind="submit: addItem">
    New item:
    <input data-bind='value: itemToAdd, valueUpdate: "afterkeydown"' />
    <button type="submit" data-bind="enable: itemToAdd().length > 0">Add</button>
    <p>Your items:</p>
    <select multiple="multiple" width="50" data-bind="options: items"> </select>
</form>

